doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title FireNote
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="Real-time Note editor based on firebase and firepad")
    meta(name="author", content="Steven McNeely aka sxmxc")
    link(href="/css/bootstrap.min.css", rel="stylesheet")
    link(href="/css/styles.css", rel="stylesheet")
    // Firebase
    script(src='https://cdn.firebase.com/js/client/2.3.2/firebase.js')
    // CodeMirror
    script(src='https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.10.0/codemirror.js')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.10.0/codemirror.css')
    // Firepad
    link(rel='stylesheet', href='https://cdn.firebase.com/libs/firepad/1.3.0/firepad.css')
    script(src='https://cdn.firebase.com/libs/firepad/1.3.0/firepad.min.js')
    //
      Include example userlist script / CSS.
      Can be downloaded from: https://github.com/firebase/firepad/tree/master/examples/
    script(src='/js/firepad-userlist.min.js')
    link(rel='stylesheet', href='/css/firepad-userlist.min.css')
    style.
      html { height: 100%; }
      body { margin: 0; height: 100%; }
      /* Height / width / positioning can be customized for your use case.
      For demo purposes, we make the user list 175px and firepad fill the rest of the page. */
      #userlist {
      position: absolute; left: 0; top: 0; bottom: 0; height: auto;
      width: 175px;
      }
      #firepad {
      position: absolute; left: 175px; top: 0; bottom: 0; right: 0; height: auto;
      }
  body
    block content

