extends layout

block content

  #banner.jumbotron
    .container
      h1 FireNote
      p.
        A real-time note editor using
        <a href="http://nodejs.org">Node.js</a>,
        <a href="http://expressjs.com">Express</a>, and of course
        <a href="http://socket.io">Socket.IO</a>.

      p.
        <a class="btn btn-primary" href="https://github.com/sxmxc/NodeFireNote.git">
        View project on GitHub
        </a>

  .container
    .row
      .col-sm-6
        h2 Create Note
        form#createNote(action="/fireNote", method="Get", role="form")
          button.btn.btn-secondary(type="submit") New

  script(src="/js/jquery.min.js")
  script(src="/js/bootstrap.min.js")